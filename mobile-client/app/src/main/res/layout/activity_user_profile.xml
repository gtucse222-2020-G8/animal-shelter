<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/sda"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/home_background"
              android:paddingBottom="6dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            android:layout_weight="0.20"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
        <EditText
                android:hint="USER PROFILE SETTINGS"
                android:textColor="#9ED8D3"
                android:inputType="none"
                android:textStyle="bold"
                android:editable="false"
                android:textSize="23dp"
                android:textColorHint="#4053BB"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            android:layout_weight="0.30"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:gravity="bottom">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="bottom">

            <EditText
                    android:hint="Name"
                    android:textColor="#9ED8D3"
                    android:inputType="none"
                    android:textSize="19dp"
                    android:editable="false"
                    android:textStyle="bold"
                    android:textColorHint="#050505"
                    android:textAlignment="center"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="bottom">
            <EditText
                    android:id="@+id/userNameField"
                    android:textColor="#E0E9E8"
                    android:textColorHint="#FFFFFF"
                    android:textAlignment="center"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            android:layout_weight="0.30"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="bottom">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:hint="Surname"
                    android:textColor="#9ED8D3"
                    android:inputType="none"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:editable="false"
                    android:textColorHint="#050505"
                    android:textAlignment="center"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:id="@+id/surnameField"
                    android:textColor="#E0E9E8"
                    android:textColorHint="#FFFFFF"
                    android:textAlignment="center"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            android:layout_weight="0.30"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:hint="Password"
                    android:textColor="#9ED8D3"
                    android:inputType="none"
                    android:editable="false"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColorHint="#050505"
                    android:textAlignment="center"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:id="@+id/passwordField"
                    android:textColor="#E0E9E8"
                    android:textColorHint="#FFFFFF"
                    android:textAlignment="center"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            android:layout_weight="0.30"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:hint="New Password"
                    android:textColor="#9ED8D3"
                    android:inputType="none"
                    android:textSize="19dp"
                    android:editable="false"
                    android:textStyle="bold"
                    android:textColorHint="#050505"
                    android:textAlignment="center"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:id="@+id/newPasswordField"
                    android:textColor="#E0E9E8"
                    android:textColorHint="#FFFFFF"
                    android:textAlignment="center"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            android:layout_weight="0.30"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:hint="New Password Again"
                    android:textColor="#9ED8D3"
                    android:inputType="none"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:editable="false"
                    android:textColorHint="#050505"
                    android:textAlignment="center"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:id="@+id/passwordAgainField"
                    android:textColor="#E0E9E8"
                    android:textColorHint="#FFFFFF"
                    android:textAlignment="center"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            android:paddingRight="10dp"
            android:layout_weight="0.30"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:hint="Email"
                    android:textColor="#9ED8D3"
                    android:inputType="none"
                    android:textSize="19dp"
                    android:textColorHint="#050505"
                    android:textAlignment="center"
                    android:editable="false"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:id="@+id/emailField"
                    android:textColor="#E0E9E8"
                    android:textColorHint="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:padding="20px"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="30px">

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:text="Save"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#F7DBDB" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="30px">

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_sign_up"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#F7DBDB" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

